<%- include ../layout.ejs%>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include ../includes/aslideleft.ejs%>
        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline" action="/admin/product/list" method="post">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称" name="searchField" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>图标</th>
                            <th>名称</th>
                            <th>价格</th>
                            <th>邮费</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var item in products){%>
                        <tr>
                            <td><%= item%></td>
                            <td><img height="30" width="30"
                                src="/upload/<%= products[item].picture%>"/>
                            </td>
                            <td>
                                <%= products[item].title%>
                            </td>
                            <td>
                                <%= products[item].price%>
                            </td>
                            <td>
                                <%= products[item].postage%>
                            </td>
                            <td class="text-center">
                                <a href="/admin/product/update/<%= products[item]._id%>">修改</a>
                                <a href="/admin/product/list?id=<%= products[item]._id%>">删除</a>
                            </td>
                        </tr>
                        <% }%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>

</html>